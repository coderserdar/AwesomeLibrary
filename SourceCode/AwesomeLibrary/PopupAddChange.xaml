<UserControl x:Class="AwesomeLibrary.PopupAddChange"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="300" d:DesignWidth="480">

    <StackPanel x:Name="LayoutRoot" Width="480" Height="300" Background="Black">
        <TextBox x:Name="txtLabel" IsReadOnly="True"/>
        <TextBox x:Name="txtName" InputScope="Text"/>
        <Button x:Name="btnOK" Content="OK"/>
        <Button x:Name="btnCancel" Content="Cancel"/>
    </StackPanel>
</UserControl>